<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ShadowLayout">
        <attr name="ShadowLayout_Radius" format="dimension" />
        <attr name="ShadowLayout_Dx" format="dimension" />
        <attr name="ShadowLayout_Dy" format="dimension" />
        <attr name="ShadowLayout_ShadowColor" format="color" />
        <attr name="ShadowLayout_Side" format="enum">
            <flag name="all" value="0x1111" />
            <flag name="left" value="0x0001" />
            <flag name="top" value="0x0010" />
            <flag name="right" value="0x0100" />
            <flag name="bottom" value="0x1000" />
        </attr>
    </declare-styleable>
</resources>